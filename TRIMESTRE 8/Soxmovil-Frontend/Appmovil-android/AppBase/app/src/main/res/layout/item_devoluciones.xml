<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="#A5D6A7"
        android:layout_margin="6dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="2dp">

        <!-- ID -->
<LinearLayout
android:layout_width="40dp"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center_horizontal">

<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#333"/>

<TextView
        android:id="@+id/tvIdDevolucion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#2E7D32"/>
</LinearLayout>

        <!-- Mercancía -->
<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1.2"
android:orientation="vertical"
android:paddingHorizontal="4dp">

<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mercancía"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#333"/>

<TextView
        android:id="@+id/tvMercanciaD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="2823"
        android:textColor="#2E7D32"/>
</LinearLayout>

        <!-- Despachos -->
<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1.3"
android:orientation="vertical"
android:paddingHorizontal="4dp">

<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Despachos"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#333"/>

<TextView
        android:id="@+id/tvDespachosD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="5"
        android:textColor="#2E7D32"/>
</LinearLayout>

        <!-- Usuarios -->
<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1.5"
android:orientation="vertical"
android:paddingHorizontal="4dp">

<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuarios"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#333"/>

<TextView
        android:id="@+id/tvUsuariosD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="103596325"
        android:textColor="#2E7D32"/>
</LinearLayout>

        <!-- Acciones -->
<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center">

<ImageButton
        android:id="@+id/btnEditarD"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:src="@mipmap/usuario"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:contentDescription="Editar devolución"/>

<ImageButton
        android:id="@+id/btnEliminarD"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:src="@mipmap/eliminarusuario"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:contentDescription="Eliminar devolución"/>
</LinearLayout>

        </LinearLayout>
