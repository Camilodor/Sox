<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="#F5F5F5">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

        <!-- Usuario -->
        <EditText
                android:id="@+id/etMercnciaH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mercancias"
                android:inputType="textPersonName"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#8E44AD"
                android:padding="12dp"
                android:textColor="#2C3E50"
                android:textColorHint="#7F8C8D"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp"/>

        <!-- Nombres -->
        <EditText
                android:id="@+id/etUsuariosH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuarios"
                android:inputType="textPersonName"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#8E44AD"
                android:padding="12dp"
                android:textColor="#2C3E50"
                android:textColorHint="#7F8C8D"
                android:layout_marginBottom="12dp"/>

        <EditText
                android:id="@+id/etVehiculos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vehiculos"
                android:inputType="textPersonName"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#8E44AD"
                android:padding="12dp"
                android:textColor="#2C3E50"
                android:textColorHint="#7F8C8D"
                android:layout_marginBottom="12dp"/>

        <Spinner
                android:id="@+id/spinnerTipopago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8E44AD"
                android:layout_marginBottom="12dp"/>
        <EditText
                android:id="@+id/etFechaH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha del despacho"
                android:inputType="date"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#8E44AD"
                android:padding="12dp"
                android:textColor="#2C3E50"
                android:textColorHint="#7F8C8D"
                android:layout_marginBottom="12dp"/>




        <!-- Celular -->
        <EditText
                android:id="@+id/etNegociacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Negociacion"
                android:inputType="numberDecimal"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#8E44AD"
                android:padding="12dp"
                android:textColor="#2C3E50"
                android:textColorHint="#7F8C8D"
                android:layout_marginBottom="12dp"/>

        <!-- DirecciÃ³n -->
        <EditText
                android:id="@+id/etAnticipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Anticipo"
                android:inputType="numberDecimal"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#8E44AD"
                android:padding="12dp"
                android:textColor="#2C3E50"
                android:textColorHint="#7F8C8D"
                android:layout_marginBottom="12dp"/>

        <!-- Ciudad -->
        <EditText
                android:id="@+id/etSaldo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Saldo"
                android:inputType="numberDecimal"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#8E44AD"
                android:padding="12dp"
                android:textColor="#2C3E50"
                android:textColorHint="#7F8C8D"
                android:layout_marginBottom="12dp"/>

        <!-- Correo -->
        <EditText
                android:id="@+id/etObservacionesH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Observaciones"
                android:inputType="textPersonName"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#8E44AD"
                android:padding="12dp"
                android:textColor="#2C3E50"
                android:textColorHint="#7F8C8D"
                android:layout_marginBottom="12dp"/>



        <Button
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Usuario"
                android:backgroundTint="#27AE60"
                android:textColor="@android:color/white"
                android:padding="14dp"
                android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>
