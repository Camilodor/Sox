<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="#C8E6C9"
        android:layout_margin="6dp"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTintMode="src_over"
        android:backgroundTint="#C8E6C9"
        android:elevation="2dp">

    <!-- ID -->
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#555"/>

        <TextView
                android:id="@+id/tvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#2E7D32"/>
    </LinearLayout>

    <!-- Proveedores -->
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proveedor"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#555"/>

        <TextView
                android:id="@+id/tvProveedores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proveedor X"
                android:textColor="#2E7D32"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1"/>
    </LinearLayout>

    <!-- Usuarios -->
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#555"/>

        <TextView
                android:id="@+id/tvUsuariosM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10135923656"
                android:textColor="#2E7D32"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1"/>
    </LinearLayout>

    <!-- Remesa -->
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remesa"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#555"/>

        <TextView
                android:id="@+id/tvRemesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2856"
                android:textColor="#2E7D32"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1"/>
    </LinearLayout>

    <!-- Botón Editar -->
    <ImageButton
            android:id="@+id/btnEditarM"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="6dp"
            android:src="@mipmap/usuario"
            android:background="@android:drawable/btn_default"
            android:scaleType="centerInside"
            android:contentDescription="Editar mercancía"/>

    <!-- Botón Eliminar -->
    <ImageButton
            android:id="@+id/btnEliminarM"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="6dp"
            android:src="@mipmap/eliminarusuario"
            android:background="@android:drawable/btn_default"
            android:scaleType="centerInside"
            android:contentDescription="Eliminar mercancía"/>
</LinearLayout>
