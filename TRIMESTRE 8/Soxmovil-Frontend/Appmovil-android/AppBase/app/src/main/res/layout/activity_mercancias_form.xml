<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            android:padding="16dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

        <!-- Tarjeta principal -->
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white"
                android:padding="20dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <!-- Proveedores -->
                <EditText
                        android:id="@+id/etProveedores"
                        style="@style/FormInput"
                        android:hint="Proveedores"
                        android:inputType="textPersonName"/>

                <!-- Usuarios -->
                <EditText
                        android:id="@+id/etUsuariosM"
                        style="@style/FormInput"
                        android:hint="Usuarios"
                        android:inputType="textPersonName"/>

                <!-- Fecha ingreso -->
                <EditText
                        android:id="@+id/etFechaM"
                        style="@style/FormInput"
                        android:hint="Fecha de ingreso"
                        android:inputType="date"/>

                <!-- Celular remitente -->
                <EditText
                        android:id="@+id/etCelularMR"
                        style="@style/FormInput"
                        android:hint="Celular del remitente"
                        android:inputType="phone"/>

                <!-- Número remesa -->
                <EditText
                        android:id="@+id/etRemesa"
                        style="@style/FormInput"
                        android:hint="Número de remesa"
                        android:inputType="text"/>

                <!-- Origen -->
                <EditText
                        android:id="@+id/etOrigen"
                        style="@style/FormInput"
                        android:hint="Origen"
                        android:inputType="text"/>

                <!-- Destino -->
                <EditText
                        android:id="@+id/etDestino"
                        style="@style/FormInput"
                        android:hint="Destino"
                        android:inputType="text"/>

                <!-- Nombre remitente -->
                <EditText
                        android:id="@+id/etNombreR"
                        style="@style/FormInput"
                        android:hint="Nombre del remitente"
                        android:inputType="textPersonName"/>

                <!-- Documento remitente -->
                <EditText
                        android:id="@+id/etDocumentoR"
                        style="@style/FormInput"
                        android:hint="Documento remitente"
                        android:inputType="number"/>

                <!-- Dirección remitente -->
                <EditText
                        android:id="@+id/etDireccionR"
                        style="@style/FormInput"
                        android:hint="Dirección remitente"
                        android:inputType="textPostalAddress"/>

                <!-- Nombre destinatario -->
                <EditText
                        android:id="@+id/etNombreMD"
                        style="@style/FormInput"
                        android:hint="Nombre del destinatario"
                        android:inputType="textPersonName"/>

                <!-- Documento destinatario -->
                <EditText
                        android:id="@+id/etDocumentoD"
                        style="@style/FormInput"
                        android:hint="Documento destinatario"
                        android:inputType="number"/>

                <!-- Dirección destinatario -->
                <EditText
                        android:id="@+id/etDireccionD"
                        style="@style/FormInput"
                        android:hint="Dirección destinatario"
                        android:inputType="textPostalAddress"/>

                <!-- Celular destinatario -->
                <EditText
                        android:id="@+id/etCelularMD"
                        style="@style/FormInput"
                        android:hint="Celular destinatario"
                        android:inputType="phone"/>

                <!-- Valor declarado -->
                <EditText
                        android:id="@+id/etValorD"
                        style="@style/FormInput"
                        android:hint="Valor declarado"
                        android:inputType="numberDecimal"/>

                <!-- Valor flete -->
                <EditText
                        android:id="@+id/etValorF"
                        style="@style/FormInput"
                        android:hint="Valor flete"
                        android:inputType="numberDecimal"/>

                <!-- Valor total -->
                <EditText
                        android:id="@+id/etValorT"
                        style="@style/FormInput"
                        android:hint="Valor total"
                        android:inputType="numberDecimal"/>

                <!-- Peso -->
                <EditText
                        android:id="@+id/etPeso"
                        style="@style/FormInput"
                        android:hint="Peso"
                        android:inputType="numberDecimal"/>

                <!-- Unidades -->
                <EditText
                        android:id="@+id/etUnidades"
                        style="@style/FormInput"
                        android:hint="Unidades"
                        android:inputType="number"/>

                <!-- Observaciones -->
                <EditText
                        android:id="@+id/etObservacionesM"
                        style="@style/FormInput"
                        android:hint="Observaciones"
                        android:inputType="textMultiLine"/>

                <!-- Tipo pago -->
                <Spinner
                        android:id="@+id/spinnerTipopago"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"/>

                <!-- Botón Guardar -->
                <Button
                        android:id="@+id/btnGuardar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Guardar Entrega"
                        android:textColor="@android:color/white"
                        android:padding="14dp"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_button"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
